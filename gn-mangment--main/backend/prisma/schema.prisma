// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  MANAGER
  USER
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  password  String
  name      String
  role      Role      @default(USER)
  receptions     EquipmentReception[]
  deliveries     EquipmentDelivery[]
  credits        FinancialCredit[]    @relation("CreditCreator")
  realEstates    RealEstateStatus[]   @relation("RealEstateCreator")
  vehicles       AdministrativeVehicle[] @relation("VehicleCreator")
  maintenance    MaintenanceRecord[]  @relation("MaintenanceCreator")
  fuelRecords    FuelRecord[]         @relation("FuelCreator")
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model RefreshToken {
  id        Int       @id @default(autoincrement())
  token     String    @unique
  userId    Int
  expiresAt DateTime
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model EquipmentReception {
  id              Int       @id @default(autoincrement())
  equipmentName   String
  category        String
  quantity        Int
  minimumThreshold Int
  sendingDept     String
  receptionDate   DateTime
  reference       String?
  referenceNumber String
  referenceDate   DateTime
  notes           String?
  createdBy       Int
  creator         User      @relation(fields: [createdBy], references: [id])
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}

model FinancialCredit {
  id              Int       @id @default(autoincrement())
  description     String
  totalAmount     Float
  spentAmount     Float     @default(0)
  remainingAmount Float
  year            Int
  createdBy       Int
  creator         User      @relation("CreditCreator", fields: [createdBy], references: [id])
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}

model EquipmentDelivery {
  id                Int       @id @default(autoincrement())
  equipmentName     String
  category          String
  quantity          Int
  beneficiaryUnit   String
  beneficiary       String
  receiver          String
  deliveredBy       Int
  deliverer         User      @relation(fields: [deliveredBy], references: [id])
  deliveryDate      DateTime
  referenceNumber   String
  referenceDate     DateTime
  warehouseManager  String
  unitHead          String
  notes             String?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
}

model RealEstateStatus {
  id              Int       @id @default(autoincrement())
  unitName        String
  location        String
  status          String    // e.g., Owned, Rented, Under Construction
  area            Float?
  legalStatus     String?   // الوضعية القانونية
  notes           String?
  createdBy       Int
  creator         User      @relation("RealEstateCreator", fields: [createdBy], references: [id])
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}

model AdministrativeVehicle {
  id              Int       @id @default(autoincrement())
  plateNumber     String    @unique
  vehicleType     String    // e.g., Car, Truck, Motorcycle
  brand           String
  model           String
  assignedUnit    String
  status          String    // e.g., Operational, Under Repair, Out of Service
  createdBy       Int
  creator         User      @relation("VehicleCreator", fields: [createdBy], references: [id])
  maintenance     MaintenanceRecord[]
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}

model MaintenanceRecord {
  id              Int       @id @default(autoincrement())
  vehicleId       Int
  vehicle         AdministrativeVehicle @relation(fields: [vehicleId], references: [id])
  maintenanceDate DateTime
  description     String
  cost            Float
  garage          String?
  createdBy       Int
  creator         User      @relation("MaintenanceCreator", fields: [createdBy], references: [id])
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}

model FuelRecord {
  id              Int       @id @default(autoincrement())
  unit            String
  amount          Float
  fuelType        String    // e.g., Diesel, Gasoline
  couponNumbers   String?
  date            DateTime
  createdBy       Int
  creator         User      @relation("FuelCreator", fields: [createdBy], references: [id])
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}

model SystemSettings {
  id              Int       @id @default(1)
  regionName      String    @default("Metlaoui")
  updatedAt       DateTime  @updatedAt
}
